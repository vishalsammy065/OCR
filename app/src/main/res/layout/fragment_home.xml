<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishal.ocr.HomeFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightgray">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:text="Optical Character Recognition"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/model_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cpu"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="27dp"
                android:text="model"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/android_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/model_number"
                android:layout_below="@+id/model_number"
                android:layout_marginTop="14dp"
                android:text="This is the android version_information"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/android_version"
                android:layout_marginTop="15dp"
                android:text="This is the CPU Information"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cpu"
                android:layout_below="@+id/cpu"
                android:layout_marginTop="14dp"
                android:text="This is the RAM Information"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14dp" />

            <Button
                android:id="@+id/openCamera"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="178dp"
                android:background="@color/colorPrimaryDark"
                android:text="Open Camera"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/openGallery"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/openCamera"
                android:layout_alignTop="@+id/openCamera"
                android:layout_marginTop="73dp"
                android:background="@color/colorPrimaryDark"
                android:text="Open Gallery"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="\u00a9 Kidding, OCR is opensource."
                android:textColor="@color/colorPrimaryDark" />

        </RelativeLayout>
</FrameLayout>
